// https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id      String @id @default(cuid())
  storeId String
  name    String
  city    String
  state   String
  userId  String

  Employee Employee[]
}

model Employee {
  id         String @id @default(cuid())
  employeeId String
  name       String
  userId     String

  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId String

  Shift   Shift[]
}

model Shift {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  userId    String
  notes     String?

  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId String
}
